---
import WalletIcon from '@assets/wallet.svg'
import type { Wallet } from '../../data/home'
import { Image } from 'astro:assets'

interface Props {
  cards: Array<Wallet>
}
const { cards } = Astro.props
---

{
  cards.map((card) => (
    <div class='card'>
      <Image class='cardLogo' src={card.image} alt={card.name} />
      <a
        href={card.link}
        class='btn secondary flexible'
        data-umami-event={`WalletList - ${card.name}`}
        target='_blank'
        rel='noreferrer noopener'
      >
        Set up a wallet
        <WalletIcon />
      </a>
    </div>
  ))
}

<style>
  .card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: var(--pill-rounding);
    padding: var(--padding-md);
    gap: var(--spacing-md);
    border: 1px solid var(--border-color);
    flex-direction: row;
    flex-wrap: wrap;
  }
  .card a svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: currentColor;
  }

  .cardLogo {
    width: 146px;
    height: 32px;
    object-fit: contain;
    object-position: left center;
    display: block;
  }
</style>
