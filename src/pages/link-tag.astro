---
import i18next, { t, changeLanguage } from "i18next";
import Base from '../layouts/Base.astro';
import LinkTagGenerator from "../components/pages/LinkTagGenerator";
---
<Base>
  <section class="section">
    <div class="contentWrapperMd">
      <h1 class="heading2">Link Tag Generator</h1>
      <p>
        This Link Tag Generator helps you generate your HTML link tag to
        monetize your website. Just provide your <a
          href='https://docs.openpayments.guide/docs/payment-pointers'
          rel='noreferrer noopener'
          target='_blank'
        >Payment Pointer</a> and click generate.
      </p>
      <LinkTagGenerator client:load />
    </div>
</section>
</Base>
